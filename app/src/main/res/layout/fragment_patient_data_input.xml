<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patientDataInput">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/new_bg">

            <TextView
                android:id="@+id/bpId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:drawableStart="@drawable/bp"
                android:gravity="left"
                android:text="@string/blood_presser"
                android:textAlignment="center"
                android:textColor="@color/colorblack"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <EditText
            android:id="@+id/bpUpperId"
            android:layout_width="107dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="188dp"
            android:gravity="center_horizontal"
            android:hint="Upper"
            android:inputType="numberDecimal"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sugerID"
            android:layout_width="169dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="382dp"
            android:layout_marginEnd="124dp"
            android:gravity="center_horizontal"
            android:hint="sugar"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:targetApi="o" />

        <CheckBox
            android:id="@+id/isEmptyStomach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sugerID"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="139dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="253dp"
            android:text="Empty Stomach"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorPrimary" />

        <Button
            android:id="@+id/submitId"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="152dp"
            android:layout_marginTop="513dp"
            android:layout_marginEnd="141dp"
            android:text="Submit" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/new_bg">

            <TextView
                android:id="@+id/bsId"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:drawableStart="@drawable/bs"
                android:text="@string/blood_sugar"
                android:textAlignment="center"
                android:textColor="@color/colorblack"
                android:textSize="30sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <EditText
            android:id="@+id/bpLowerID"
            android:layout_width="107dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="218dp"
            android:layout_marginTop="188dp"
            android:gravity="center_horizontal"
            android:hint="Lower"
            android:inputType="numberDecimal"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>



</FrameLayout>