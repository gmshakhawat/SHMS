<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sky">


    <TextView
        android:id="@+id/pName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="264dp"
        android:gravity="center"
        android:text="M shakhawat Hossain"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cancelText"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="212dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:background="#e23"
        android:gravity="center"
        android:visibility="gone"
        android:text="Canceled"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/aproveText"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="212dp"
        android:layout_marginTop="0dp"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        android:background="#20C35C"
        android:gravity="center"
        android:text="Approved"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/appointmentRequestCancel"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="222dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="3dp"
        android:background="#e23"
        android:gravity="center"
        android:onClick="cancelAp"
        android:padding="5dp"
        android:text="Cancel"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="13dp" />

    <Button
        android:id="@+id/appointmentRequestApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="299dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="3dp"
        android:background="#20C35C"
        android:gravity="center"
        android:onClick="aproveAp"
        android:padding="5dp"
        android:text="Appointment"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="13dp" />


</RelativeLayout>