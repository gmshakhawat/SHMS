<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_bg"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Emergency">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Emcontainer"
        >


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Emergency"
        android:layout_gravity="center"
        android:textColor="@color/colorblack"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="your "
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#db0634"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reportDoctor"
        android:text="Click here to report the doctor"
        android:textColor="#FFD800"
        android:background="#FF0012"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="92dp"
        android:background="@color/green">

        <TableRow>

            <TextView
                android:layout_width="74dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Doctor"
                android:textColor="@color/colorblack"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="74dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorblack"
                android:text="Ambulance"
                android:textSize="30sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="Dr.Fazlul Hoque"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp"/>

            <TextView
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:textColor="@color/colorblack"
                android:gravity="center"
                android:text="মেসার্স সরকার ফার্মেসী -২৪ ঘন্টা এ্যম্বুলেন্স সার্ভিস"
                android:textSize="20sp"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp"/>


        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="Dr.Nesaruddin Ahmed"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp"/>

            <TextView
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:textColor="@color/colorblack"
                android:gravity="center"
                android:text="MODERN AMBULANCE SERVICE"
                android:textSize="20sp"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="Dr. Ferdous Ara Janan"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp"/>

            <TextView
                android:layout_width="227dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:textColor="@color/colorblack"
                android:gravity="center"
                android:text="সরকার এ্যম্বুলেন্স সার্ভিস"
                android:textSize="20sp"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="1dp"/>



        </TableRow>


    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/emergencycallId"
            android:layout_width="151dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Emergency Call Doctor"
            android:textColor="@color/colorblack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/contactcallId"
            android:layout_width="151dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Emergency Call Ambulance"
            android:textColor="@color/colorblack"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>





</LinearLayout>